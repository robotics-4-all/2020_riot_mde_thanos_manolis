// RIOT Configuration for MPL3115A2 pressure sensor

peripheral:
    name: mpl3115a2
    type: sensor
    operating_voltage: 3.3
    vcc: 3.3
    pins:
	- power:
	    name: vcc
	    number: 1
	    type: 3v3
    - power:
	    name: gnd
	    number: 2
	    type: gnd
	- io_pin: -> scl-0
	    name: scl
	    number: 5
    - io_pin: -> sda-0
	    name: sda
	    number: 6
