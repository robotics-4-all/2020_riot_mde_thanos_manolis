// RIOT Configuration for SRF04 (HC-SR04) ultra sonic range finder

peripheral:
    name: bme680
    type: sensor
    operating_voltage: 3.3
    vcc: 3.3
    pins:
	- power:
	    name: vcc
	    number: 1
	    type: 5v
	- io_pin: -> sda-0
	    name: sda
	    number: 2
	- io_pin: -> scl-0
	    name: scl
	    number: 3
	- power:
	    name: gnd
	    number: 4
	    type: gnd
