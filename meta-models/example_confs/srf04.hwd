// RIOT Configuration for SRF04 (HC-SR04) ultra sonic range finder

peripheral:
    name: srf04
    type: sensor
    operating_voltage: 5
    vcc: 5
    pins:
	- power:
	    name: vcc
	    number: 1
	    type: 5v
	- input_pin:
	    name: trigger
	    number: 2
	- output_pin:
	    name: echo
	    number: 3
	- power:
	    name: gnd
	    number: 4
	    type: gnd
